{
    "extends": ["stylelint-config-standard-scss"],
    "rules": {
        "block-no-empty": true,
        "color-hex-case": "lower",
        "color-hex-length": "short",
        "color-no-invalid-hex": true,
        "declaration-colon-space-after": "always",
        "indentation": 4,
        "max-empty-lines": 1,
        "selector-class-pattern": "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$|^Mui.*$"
    }
}